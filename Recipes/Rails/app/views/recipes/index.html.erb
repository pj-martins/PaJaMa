<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for :@search_parameters, url: {action: "search"} do |f| %>

		<%= f.label "Include Ingredients (separate by semicolon)" %>
		<%= f.text_field :includes, class: 'form-control' %>

		<%= f.label "Exclude Ingredients (separate by semicolon)" %>
		<%= f.text_field :excludes, class: 'form-control' %>

		<%= f.label :rating %>
		<%= f.text_field :rating, class: 'form-control' %>

		<%= f.button "Search", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<br />
<%= render @recipes %>